<Page x:Class="WPF9.View.LeaguePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF9.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LeaguePage"
      Background="#fafafa">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="Title">
            <Setter Property="FontSize" Value="36" />
        </Style>

        <Style TargetType="TextBlock" x:Key="Team">
            <Setter Property="FontSize" Value="28" />
        </Style>

        <Style TargetType="Label" x:Key="Label">
            <Setter Property="FontSize" Value="17" />
        </Style>
    </Page.Resources>
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition />
            <ColumnDefinition Width="25" />
            <ColumnDefinition />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="25" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>


        <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Text="Liga Koszykówka. Rusz głową" Style="{StaticResource Title}" />


        <StackPanel Grid.Column="1" Grid.Row="3">
            <TextBlock Text="Wspaniali" Style="{StaticResource Team}" />

            <Label Content="Na parkiecie" Style="{StaticResource Label}" />
            <ListView Name="leftList1" Height="Auto"  />

            <Label Content="Na ławce" Style="{StaticResource Label}" />
            <ListView Name="leftList2" Height="Auto" />
        </StackPanel>

        
        <StackPanel Grid.Column="3" Grid.Row="3">
            <TextBlock Text="Wspaniali" Style="{StaticResource Team}" />

            <Label Content="Na parkiecie" Style="{StaticResource Label}" />
            <ListView Name="rightList1" Height="Auto"  />

            <Label Content="Na ławce" Style="{StaticResource Label}" />
            <ListView Name="rightList2" Height="Auto" />
        </StackPanel>
    </Grid>
</Page>
